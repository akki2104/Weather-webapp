<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />

    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.css" rel="stylesheet" />

    {{!-- css --}}
    <link rel="stylesheet" href="css/style.css">

    <title>Document</title>
</head>

<body>



    <section class="vh-100" style="background-color: #6F1AB6;">
        <section class="serachboox">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-3"></div>
                    
                    <div class="col-lg-6 col-md-6">
                        <div class="input-group mt-4">
                            <input type="text" id="cityvalue" class="form-control" autocomplete="off"
                                placeholder="Enter your city name" style="border-radius: 20px !important;">

                            <button id="sbbtn" class="btn btn-danger"
                                style="line-height: 1.35 !important; border-radius: 20px;" type="submit"><i
                                    class="fa fa-search"></i></button>

                        </div>
                    </div>
                    
                    <div class="col-lg-3 col-md-3"></div>
                </div>
            </div>
        </section>
        <div class="container py-5">

            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-8 col-lg-6 col-xl-4">

                    <div class="card" style="color: #4B515D; border-radius: 35px; margin-top:100px;">
                        <div class="card-body p-4  mt-4">

                            <div class="d-flex">
                                <h6 id="showcity" class="flex-grow-1" style="color: #868B94">Enter your City Name Above</h6>
                                <h6 id="time" > 15:07</h6>
                            </div>

                            <div class="d-flex flex-column text-center mt-5 mb-4">
                                <h6 id="temperature" class="display-4 mb-0 font-weight-bold" style="color: #1C2331;"></h6>
                                <span id="citystatus" class="small" style="color: #868B94"></span>
                            </div>

                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1" style="font-size: 1rem;">
                                    <div><i class="fas fa-wind fa-fw" style="color: #868B94;"></i> <span id="windspeed" class="ms-1">

                                        </span></div>
                                    <div><i class="fas fa-tint fa-fw" style="color: #868B94;"></i> <span id="humidity" class="ms-1">
                                             </span>
                                    </div>
                                    <div><i <i class="fa-sharp fa-solid fa-question" style="color: #868B94;"></i> <span id="desc" class="ms-1">
                                             </span>
                                    </div>
                                </div>
                                <div>
                                    <img id="imgst"
                                        width="100px">
                                </div>

                            </div>


                        </div>

                    </div>
                    <a href="*" class="d-flex justify-content-center link_404" style="border-radius: 20px;">Visit 404
                        Page</a>

                </div>
            </div>

        </div>

    </section>



    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.1.0/mdb.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>